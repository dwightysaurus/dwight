<?php
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $username = $_POST["username"];
    $password = $_POST["password"];

    if (!preg_match("/^(?=.*[0-9])(?=.*[!@#$%^&*])(?=.{8,12}$)/", $password)) {
        $message = "<p class='error'>Password must be 8â€“12 characters long, contain at least 1 number and 1 special character.</p>";
    } else {
        $hashed = md5($password);
        file_put_contents("users.txt", $username . "|" . $hashed . "\n", FILE_APPEND);
        $message = "<p class='success'>Registered successfully! <a href='login.php'>Go to Login</a></p>";
    }
}
?>
<!DOCTYPE html>
<html>
<head>
    <title>Register</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f0f2f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .container {
            background: #fff;
            padding: 20px 30px;
            border-radius: 8px;
            width: 320px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            text-align: center;
        }
        h2 { margin-bottom: 15px; color: #333; }
        input[type="text"], input[type="password"] {
            width: 100%; padding: 10px; margin: 6px 0 15px;
            border: 1px solid #ccc; border-radius: 5px;
        }
        button {
            width: 100%; padding: 10px;
            background: #007bff; border: none;
            color: white; border-radius: 5px; cursor: pointer;
        }
        button:hover { background: #0056b3; }
        .message { margin-bottom: 15px; }
        .error { color: #b30000; }
        .success { color: #008000; }
        p a { color: #007bff; text-decoration: none; }
        p a:hover { text-decoration: underline; }
    </style>
</head>
<body>
    <div class="container">
        <?php if (!empty($message)) echo "<div class='message'>$message</div>"; ?>
        <form method="post">
            <h2>Register</h2>
            <input type="text" name="username" placeholder="Enter username" required>
            <input type="password" name="password" placeholder="Enter password" required>
            <button type="submit">Register</button>
        </form>
        <p>Already registered? <a href="login.php">Login here</a></p>
    </div>
</body>
</html>
